// Fig. 5.13: fig05_13.c
// Randomizing die-rolling program.
#include <stdlib.h>
#include <stdio.h>
#include<math.h>

int main(void)
{
    unsigned int i;
    unsigned int n, m, temp; // number used to seed the random number generator

    printf("enter n (n<5):");
    scanf_s("%u", &n); // note %u for unsigned int

        // loop 10 times
        for (i = 1; i <=pow (10,n); ++i) {
            temp = pow(10, n);
            m = rand() % temp;
            // pick a random number from 1 to 6 and output it
            printf("%1f", (double)m / pow(10, n));

            // if counter is divisible by 5, begin a new line of output
            if (i % 5 == 0) {
                puts("");
            }
        }
}
